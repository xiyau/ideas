extends ../layout

block content

  .row
    .col-md-6.mx-auto
      .card.card-body
        img.logo(src="/img/logo.png")
        h3.text-center Account Register
        form
          .form-group
            label(for="name") Name
            input.form-control(type="text" name="name" required="")
          .form-group
            label(for="email") Email
            input.form-control(type="email" name="email" required="")
          .form-group
            label(for="password") Password
            input.form-control(type="password" name="password" required="")
          .form-group
            label(for="password2") Confirm Password
            input.form-control(type="password" name="password2" required="")
          button.btn.btn-primary(type="submit") Submit