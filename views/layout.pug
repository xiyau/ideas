html  
	head
		title= title
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous")
		link(rel="stylesheet" href="/css/style.css")

	body
		nav.navbar.navbar-expand-sm.navbar-dark.bg-primary.mb-3
			.container
				a.navbar-brand(href="/") Ideas
				button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
					span.navbar-toggler-icon
				#navbarNav.collapse.navbar-collapse
					ul.navbar-nav
						li.nav-item
							a.nav-link(href="/") Home
						li.nav-item
							a.nav-link(href="/about") About
					ul.navbar-nav.ml-auto
						if !user
							li.nav-item
								a.nav-link(href="/users/login") Login
							li.nav-item
								a.nav-link(href="/users/register") Register
						if user
							li.nav-item
								a.nav-link(href="/users/logout") Logout
						li.nav-item.dropdown
							a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href="#" data-toggle="dropdown") Video Ideas
							.dropdown-menu
								a.dropdown-item(href="/ideas") Ideas
								a.dropdown-item(href="/ideas/add") Add Idea
		if(locals.success_msg.length > 0)
			.alert.alert-success= success_msg[0]
		if(locals.error_msg.length > 0)
			.alert.alert-danger= error_msg[0]


		block content


		script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
